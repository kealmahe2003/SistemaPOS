<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<ScrollPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafeteriapos.controllers.DashboardController" styleClass="dashboard-scroll" fitToWidth="true">
   <content>
      <VBox styleClass="dashboard-basic" spacing="30.0">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         
         <!-- Título Principal -->
         <VBox styleClass="title-section" spacing="8.0">
            <Label text="Dashboard Analytics" styleClass="main-title" />
            <Label text="Sistema de monitoreo profesional en tiempo real" styleClass="subtitle" />
            <Label fx:id="lblUltimaActualizacion" text="Última actualización: --:--" styleClass="ultima-actualizacion" />
         </VBox>
         
         <!-- Grid de Estadísticas Principales -->
         <VBox styleClass="card-container" spacing="20.0">
            <Label text="Resumen Ejecutivo" styleClass="section-title" />
            <Label text="Métricas clave del negocio" styleClass="section-subtitle" />
            
            <GridPane styleClass="stats-grid" hgap="20.0" vgap="15.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="200.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="200.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="200.0" />
               </columnConstraints>
               
               <!-- Tarjeta Ventas Hoy -->
               <VBox styleClass="stat-card stat-card-sales" GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <Label fx:id="lblVentasHoy" text="0.00" styleClass="stat-value" />
                  <Label text="Ventas de Hoy" styleClass="stat-label" />
               </VBox>
               
               <!-- Tarjeta Ingresos -->
               <VBox styleClass="stat-card stat-card-income" GridPane.columnIndex="1" GridPane.rowIndex="0">
                  <Label fx:id="lblIngresosHoy" text="0.00" styleClass="stat-value" />
                  <Label text="Ingresos Totales" styleClass="stat-label" />
               </VBox>
               
               <!-- Tarjeta Transacciones -->
               <VBox styleClass="stat-card stat-card-transactions" GridPane.columnIndex="2" GridPane.rowIndex="0">
                  <Label fx:id="lblTransaccionesHoy" text="0" styleClass="stat-value" />
                  <Label text="Transacciones" styleClass="stat-label" />
               </VBox>
               
               <!-- Tarjeta Promedio -->
               <VBox styleClass="stat-card stat-card-average" GridPane.columnIndex="0" GridPane.rowIndex="1">
                  <Label fx:id="lblPromedioVenta" text="0.00" styleClass="stat-value" />
                  <Label text="Promedio por Venta" styleClass="stat-label" />
               </VBox>
               
               <!-- Tarjeta Producto Top -->
               <VBox styleClass="stat-card stat-card-top-product" GridPane.columnIndex="1" GridPane.rowIndex="1">
                  <Label fx:id="lblProductoTop" text="Ninguno" styleClass="stat-value" style="-fx-font-size: 16px;" />
                  <Label text="Producto Estrella" styleClass="stat-label" />
               </VBox>
               
               <!-- Tarjeta Cantidad Top -->
               <VBox styleClass="stat-card stat-card-quantity" GridPane.columnIndex="2" GridPane.rowIndex="1">
                  <Label fx:id="lblCantidadTop" text="0" styleClass="stat-value" />
                  <Label text="Unidades Vendidas" styleClass="stat-label" />
               </VBox>
            </GridPane>
         </VBox>
         
         <!-- Sección de Gráficos -->
         <VBox styleClass="card-container" spacing="20.0">
            <Label text="Análisis Visual" styleClass="section-title" />
            <Label text="Tendencias y patrones de ventas" styleClass="section-subtitle" />
            
            <GridPane styleClass="charts-grid" hgap="25.0" vgap="20.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="400.0" prefWidth="500.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="400.0" prefWidth="500.0" />
               </columnConstraints>
               
               <!-- Gráfico de Ventas Diarias -->
               <VBox styleClass="chart-container" GridPane.columnIndex="0" GridPane.rowIndex="0">
                  <Label text="Ventas por Día" styleClass="section-title" style="-fx-font-size: 18px;" />
                  <Label text="Últimos 7 días" styleClass="section-subtitle" />
                  <BarChart fx:id="chartVentasDiarias" animated="true" minHeight="300.0" prefHeight="350.0">
                     <xAxis>
                        <CategoryAxis fx:id="xAxisDias" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis fx:id="yAxisVentas" />
                     </yAxis>
                  </BarChart>
               </VBox>
               
               <!-- Gráfico de Productos Top -->
               <VBox styleClass="chart-container" GridPane.columnIndex="1" GridPane.rowIndex="0">
                  <Label text="Productos Más Vendidos" styleClass="section-title" style="-fx-font-size: 18px;" />
                  <Label text="Distribución por popularidad" styleClass="section-subtitle" />
                  <PieChart fx:id="chartProductosTop" animated="true" minHeight="300.0" prefHeight="350.0" />
               </VBox>
            </GridPane>
         </VBox>
         
         <!-- Sección de Acciones -->
         <VBox styleClass="card-container" spacing="20.0">
            <Label text="Acciones del Dashboard" styleClass="section-title" />
            <Label text="Herramientas de gestión y análisis" styleClass="section-subtitle" />
            
            <HBox styleClass="buttons-container" spacing="15.0" alignment="CENTER">
               <Button fx:id="btnActualizar" onAction="#actualizarDatos" text="Actualizar Datos" styleClass="btn-professional" />
               <Button onAction="#exportarReporte" text="Exportar Reporte" styleClass="btn-success" />
               <Button onAction="#configurarDashboard" text="Configurar" styleClass="btn-warning" />
               <Button onAction="#gestionarProductos" text="Gestionar Productos" styleClass="btn-professional" />
               <Button onAction="#limpiarBaseDatos" text="Limpiar BD" styleClass="btn-danger" />
            </HBox>
         </VBox>
      </VBox>
   </content>
</ScrollPane>
