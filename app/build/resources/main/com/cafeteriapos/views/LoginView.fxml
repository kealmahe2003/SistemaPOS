<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cafeteriapos.controllers.LoginController">
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    <Label text="Sistema POS - Iniciar Sesión"/>
    <TextField fx:id="userField" promptText="Usuario"/>
    <PasswordField fx:id="passwordField" promptText="Contraseña"/>
    <Button text="Iniciar Sesión" onAction="#handleLogin"/>
</VBox>