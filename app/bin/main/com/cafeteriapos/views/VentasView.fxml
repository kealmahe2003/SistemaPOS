<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cafeteriapos.controllers.VentasController"
            stylesheets="@/styles/ventas.css">

    <top>
        <ToolBar styleClass="toolbar">
            <Label text="MÃ³dulo de Ventas" styleClass="titulo-modulo"/>
            <TextField fx:id="tfBusqueda" promptText="Buscar producto..." styleClass="campo-busqueda"/>
            <Button text="Nueva Venta" onAction="#limpiarCarrito" styleClass="boton-nuevo"/>
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.6" styleClass="split-pane">
            <!-- Panel izquierdo: Productos -->
            <VBox spacing="10" styleClass="panel-productos">
                <TableView fx:id="tablaProductos" styleClass="tabla-productos">
                    <columns>
                        <TableColumn text="Nombre" fx:id="columnaNombre" styleClass="columna-nombre" prefWidth="180"/>
                        <TableColumn text="Precio ($)" fx:id="columnaPrecio" styleClass="columna-precio" prefWidth="100"/>
                        <TableColumn text="Stock" fx:id="columnaStock" styleClass="columna-stock" prefWidth="80"/>
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="botonera-productos">
                    <Button text="Agregar al Carrito" onAction="#agregarAlCarrito" styleClass="boton-agregar"/>
                </HBox>
            </VBox>

            <!-- Panel derecho: Carrito -->
            <VBox spacing="10" styleClass="panel-carrito">
                <TableView fx:id="tablaCarrito" styleClass="tabla-carrito">
                    <columns>
                        <TableColumn text="Producto" fx:id="colCarritoNombre" prefWidth="150"/>
                        <TableColumn text="Cantidad" fx:id="colCarritoCantidad" prefWidth="80"/>
                        <TableColumn text="Subtotal ($)" fx:id="colCarritoSubtotal" prefWidth="100"/>
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="total-container">
                    <Label text="Total:" styleClass="label-total-text"/>
                    <Label fx:id="lblTotal" text="$0.00" styleClass="label-total"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="botonera-carrito">
                    <Button text="Remover 1" onAction="#removerDelCarrito" styleClass="boton-remover"/>
                    <Button text="Finalizar Venta" onAction="#finalizarVenta" styleClass="boton-finalizar"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <bottom>
        <StatusBar styleClass="status-bar">
            <Label text="Listo" styleClass="status-label"/>
        </StatusBar>
    </bottom>
</BorderPane>