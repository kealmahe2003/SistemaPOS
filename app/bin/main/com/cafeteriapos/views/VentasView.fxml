<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.cafeteriapos.controllers.VentasController"
            stylesheets="@../styles/ventas.css">

    <top>
        <ToolBar>
            <Label text="Módulo de Ventas" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <TextField fx:id="tfBusqueda" promptText="Buscar producto..." style="-fx-min-width: 300px;"/>
        </ToolBar>
    </top>

    <center>
        <SplitPane dividerPositions="0.7">
            <!-- Panel izquierdo: Productos disponibles -->
            <VBox spacing="10">
                <Label text="Productos Disponibles:" style="-fx-font-weight: bold;"/>
                <TableView fx:id="tablaProductos">
                    <columns>
                        <TableColumn text="Nombre" fx:id="columnaNombre" prefWidth="200"/>
                        <TableColumn text="Precio ($)" fx:id="columnaPrecio" prefWidth="100"/>
                    </columns>
                </TableView>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Agregar al carrito" onAction="#agregarAlCarrito" 
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Panel derecho: Carrito -->
            <VBox spacing="10">
                <Label text="Carrito de Compras:" style="-fx-font-weight: bold;"/>
                <ListView fx:id="listaCarrito" items="${controller.carrito}"/>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Label fx:id="lblTotal" text="Total: $0.00" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <Button text="Remover selección" onAction="#removerDelCarrito" 
                            style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                    <Button text="Finalizar venta" onAction="#finalizarVenta" 
                            style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
                </HBox>
            </VBox>
        </SplitPane>
    </center>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
</BorderPane>